/** 

This receives the user object from json file. 
Contains: name, profile-photo-url, posts [] 
posts contains: photoURL, likes, caption

**/


<aside id="profile-container">
          <img src="{{profile-photo-url}}" alt="Profile Picture" class="profile-picture"/>
       
          <div class="profileStats" id="profile-info">
            <span>{{name}}</span> 
          </div>
              <h3>Photos</h3>
         
         <!-- check if user has posts, if true create preview images -->
              {{#if {{posts}}}}
               <div id="profile-pic-grid">
                  {{#each posts}}
                      <img class="profile-grid-image" src="{{photoURL}}" alt="{{caption}}"/>
                  {{/each}}
               </div>
              {{/if}}     
          
</aside>
